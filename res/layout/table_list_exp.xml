<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@drawable/background_color1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activitiesTitle"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:layout_toLeftOf="@+id/imShowMenu"
            android:gravity="center"
            android:text="@string/activitiesText"
            android:textColor="@color/colorOrange"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imShowMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorListItem"
            android:contentDescription="@string/showMenu"
            android:src="@drawable/menu64" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/flActivities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_color1" >

        <ExpandableListView
            android:id="@+id/expandableListView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ExpandableListView>
    </FrameLayout>

</LinearLayout>