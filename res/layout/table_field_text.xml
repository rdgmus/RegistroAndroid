<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <requestFocus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvFieldName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5sp"
            android:text="FieldName"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbViewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvFieldName"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvFieldName"
            android:text="View Password"
            android:textStyle="bold"
            android:imeOptions="actionDone"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/etFieldValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cbViewPassword"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="textPersonName" />
    </RelativeLayout>

</FrameLayout>