<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp" >

    <RelativeLayout
        android:layout_width="466dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvTableName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Table"
            android:textColor="@color/colorBlue"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTableName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvTableName"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center_vertical"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bBrowseTable"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/etTableName"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:text="Browse"
            android:textColor="@color/colorStart"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/tlNewTable"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTableName"
            android:background="@drawable/field"
            android:padding="5sp" >

            <TableRow
                android:id="@+id/tableRowTableName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TableRow>

            <TableRow
                android:id="@+id/tableRowEtichette"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvRilascioTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Name"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Type"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="!Null"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Def."
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="PK"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowFields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/etFieldName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="12dp"
                    android:textStyle="bold" >

                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/etFieldType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbFieldNotnull"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="" />

                <EditText
                    android:id="@+id/etFieldsDefault"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbFieldPK"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TableRow>

            <TableLayout
                android:id="@+id/tlFieldsOfNewTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRowEtichette"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                </TableRow>
            </TableLayout>
        </TableLayout>

        <Button
            android:id="@+id/bCreateTable"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tlNewTable"
            android:text="Create Table"
            android:textColor="@color/colorBlue"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bRemoveField"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tlNewTable"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/bAddField"
            android:text="Remove Field"
            android:textColor="@color/colorRed"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bCancelOperation"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/bCreateTable"
            android:text="Cancel"
            android:textColor="@color/colorRed"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bDropTable"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bCancelOperation"
            android:layout_toRightOf="@+id/bCreateTable"
            android:text="Drop Table"
            android:textColor="@color/colorRed"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bCreateConstraints"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bAddField"
            android:layout_below="@+id/bRemoveField"
            android:text="Constraint"
            android:textColor="@color/colorStart"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bAddField"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bCreateConstraints"
            android:layout_toRightOf="@+id/bDropTable"
            android:text="Add Field"
            android:textColor="@color/colorBlue"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bCreateIndexes"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bDropTable"
            android:layout_below="@+id/bDropTable"
            android:text="Index"
            android:textColor="@color/colorStart"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/bBrowseTable"
            android:src="@drawable/dialog_close_icon" />

    </RelativeLayout>

</FrameLayout>