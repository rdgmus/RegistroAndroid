<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spinnerRuoli"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorNavy"
            android:textStyle="bold" 
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageButton
                android:contentDescription="@string/addRuolo"
                android:id="@+id/bAddRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorNavy"
                android:textStyle="bold" 
                android:src="@drawable/add"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:contentDescription="@string/removeRuolo"
                android:id="@+id/bRemoveRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorNavy"
                android:textStyle="bold" 
                android:layout_weight="1"
                android:src="@drawable/delete48"
                android:background="@android:color/transparent"
                android:visibility="invisible"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerUtenti"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorNavy"
            android:textStyle="bold" 
            android:background="@android:color/darker_gray"/>

        <ToggleButton
            android:id="@+id/tbMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textOn="Membri"
            android:textOff="Non membri"/>

    </LinearLayout>

    <TableLayout
        android:id="@+id/header_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableLayout
            android:id="@+id/content_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >
        </TableLayout>
    </ScrollView>

</LinearLayout>