<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_color1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp" >

            <ImageButton
                android:id="@+id/ivRuoloUtente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/ruoliUtentiDescription"
                android:src="@drawable/admin" />

            <ImageButton
                android:id="@+id/ibIsAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tvUserMenuTitle"
                android:background="@android:color/transparent"
                android:contentDescription="@string/ibIsAdminDescription"
                android:src="@drawable/administrator64" />

            <ImageButton
                android:id="@+id/ibLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/ibLogoutDescription"
                android:src="@drawable/logout96" />

            <TextView
                android:id="@+id/tvUserData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ibIsAdmin"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="User Name"
                android:textColor="@color/colorOrange"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUserMenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="@string/userMenuText"
                android:textColor="@color/colorOrange"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llUserCommonOptions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/ibEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mail" 
            android:background="@android:color/transparent"
            android:contentDescription="@string/ibEmailDescription"/>

        <ImageButton
            android:id="@+id/ibChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_password" 
            android:background="@android:color/transparent"
            android:contentDescription="@string/ibChangePasswordDescription"/>

        <ImageButton
            android:id="@+id/ibUsersPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/users_password"
            android:background="@android:color/transparent"
            android:contentDescription="@string/ibUsersPasswordDescription"/>

        <ImageButton
            android:id="@+id/ibDatiUtenti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ruoli_utenti" 
            android:background="@android:color/transparent"
            android:contentDescription="@string/gestisciDatiUtenti"/>
        
    </LinearLayout>

</LinearLayout>