<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/rgGraphChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioDailyConnections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:checked="true"
                android:text="@string/connGiorno"
                android:textColor="@color/colorOrange"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioMontlyConnections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/connMese"
                android:textColor="@color/colorOrange"
                android:textStyle="bold" />
        </RadioGroup>

        <ExpandableListView
            android:id="@+id/expListViewPeriods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </ExpandableListView>

        <ToggleButton
            android:id="@+id/tbGraphType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/lineChart"
            android:textOn="@string/barChart"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llConnessioni"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvNoGraph"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:alpha="0.5"
            android:gravity="center_horizontal"
            android:text="@string/noGraphMessage"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorOrange" />

    </LinearLayout>

</LinearLayout>