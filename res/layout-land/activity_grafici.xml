<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/spinnerViewPeriodTitle"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorOrange"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/spinnerSceltaGraficoTitle"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorOrange"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/spinnerTipiGraficoTitle"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorOrange"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spinnerViewPeriod"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinnerSceltaGrafico"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinnerTipoGrafico"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llConnessioni"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvNoGraph"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:alpha="0.5"
            android:gravity="center_horizontal"
            android:text="@string/noGraphMessage"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorOrange" />
    </LinearLayout>

</LinearLayout>